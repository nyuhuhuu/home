hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'
activity "Activity in %t."
autodetach on
defscrollback 30000
escape "^Xx"
bind b other
bind o focus
screen -t neoteklog 1
monitor
screen -t megrend
screen -t csabez
