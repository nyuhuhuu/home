#!/bin/bash

include()
{

    usage()
    {
        echo "Loads all scripts in a library."
        echo "Usage: `basename $0` \"library\""
    }
    
    if [ $# -lt 1 ] ; then
        usage
        return 1
    fi

    library_dir=~/bin/$1.lib
    if [ -d $library_dir ] ; then
        echo "Loading library '$1'..."
        for script in $library_dir/* ; do
            . $script > /dev/null
        done
    else
        echo $1": No such library found"
    fi
}

export -f include
